<h3>Check out all the options near you!</h3>

<div class="col">
<% @dinners.each do |dinner| %> 
	<div class="row">
		<div class="col-md-2">
			<h5>Chef id: <%= dinner.user.id %></h5>
		</div>
		<div class="col-md-2">
			<p><%= dinner.address %></p>
			<p><%= dinner.time %></p>
			<p><%= dinner.description %></p>
			<p><%= dinner.cost %> Euros</p>
		    <p><%= link_to "See what's cooking", dinner_path(dinner.id)  %></p>
		</div>
		<% if current_user == dinner.user.id %>
		<div class="col-md-2">
			<%= link_to "Edit", edit_dinner_path(dinner) %>
		</div>
		<% end %>
	</div>
<% end %>

<%= paginate @dinners %>
</div>

<div class="col">
	<%= tag.div nil, id: 'map', data: { addresses: @dinners.to_json, l: params[:l] } %>
	<%= link_to "Redo search in this area", "#", id: "redo-search" %>
</div>
