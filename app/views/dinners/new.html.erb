<h2>Create a New Dinner!</h2>

<%= form_with(model: @dinner, local: true) do |form| %>
<% if @dinner.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@dinner.errors.count, "error") %>.
    </div>
    <ul>
    <% @dinner.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
	<div class="form-group">
		<%= form.label :address %>
		<%= form.text_field :address %>
	</div>

	<div class="form-group">
		<%= form.label :time %>
		<%= form.datetime_select :time %>
	</div>

	<div class="form-group">
		<%= form.label :description %>
		<%= form.text_area :description %>
	</div>

	<div class="form-group">
		<%= form.label :cost %>
		<%= form.number_field :cost %>
	</div>

	<div class="form-group">
		<%= form.label :images %>
		<%= form.file_field :images, multiple: true %>
	</div>

	<div class="form-group">
		<%= form.label :category_ids %>
		<%= form.select :category_ids, Category.all.pluck(:name, :id), {}, { multiple: true, class: "selectize" } %>
	</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>



